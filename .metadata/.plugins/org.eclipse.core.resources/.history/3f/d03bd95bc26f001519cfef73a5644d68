
public class Testing {
	
	public static void main(String[] args) {
		Animal a = new Animal(2);
		Dog d = new Dog("Boop", 2);
		
		System.out.println(d.getLegs() + d.getName());
		a = d;
		System.out.println(a.getLegs());
		d = (Dog) a;
		System.out.println(d.getLegs() + d.getName());
	}
	
	public static class Animal {
		int legs = 0;
		
		Animal(int legs) {
			this.legs = legs;
		}
		
		public int getLegs() {
			return legs;
		}
	}
	
	public static class Dog extends Animal {
		String name = "";
		
		Dog(String name, int legs) {
			super(4); this.name = name;
		}
		
		String getName() {
			return name;
		}
	}
}
