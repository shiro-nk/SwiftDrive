package sd.swiftglobal.rk.util;

import sd.swiftglobal.rk.Settings;

public interface Logging {
	
	public static final int LOG_DEF = Settings.DEF_LOGL,
							LOG_LVL = Settings.LOG_LVL,
							LOG_FRC = Settings.LOG_FRC;
	
	public default void print(Object out, int level) {
		if(level == LOG_FRC || level <= LOG_LVL) System.out.print(out);
	}
	
	public default void print(Object oout) {
		print(oout, LOG_DEF);
	}
	
	public default void echo(Object o, int level) {
		print(o + "\n", level);
	}
	
	public default void echo(Object o) {
		echo(o, LOG_DEF);
	}
	
	public default void error(Object o, int level) {
		if(level == LOG_FRC || level <= LOG_LVL) System.err.println(o);;
	}
	
	public default void error(Object o) {
		error(o, LOG_DEF);
	}
}
