 * Please refer to <http://www.gnu.org/licenses/>. */

/**
 * Class to test other classes
 *
 * @author Ryan Kerr
 */
public class SystemTest implements Settings {
	public static void main(String[] args) {
		new SystemTest();
	}
	
	public SystemTest() {
		try(Server server = new Server()) {
			try(Client client = new Client("localhost", 3141)) {
				try(Scanner scan = new Scanner(System.in))) {
					String sc;
					while((scan.next()) != null && !scan.equals("stop")) {
						Data dat = new Data(DAT_DATA, 0) {
							public void toData() {
								
							}

							public void fromData() {
								
							}

							public void convert(Data dat) {
								
							}
						};
						dat.add(sc);
						try {
							client.sendData(dat);
						}
						catch(DisconnectException dx) {
							dx.printStackTrace();
						}
					}
					
				}
			}
		}
		catch(DisconnectException dx) {
			
		}
	}
}
