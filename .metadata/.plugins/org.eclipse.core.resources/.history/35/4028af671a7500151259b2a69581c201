package sd.swiftglobal.rk.util;

import sd.swiftglobal.rk.Settings;

public interface Logging {
	
	public static final int LOG_DEF = Settings.DEF_LOGL,
							LOG_LVL = Settings.LOG_LVL,
							LOG_FRC = Settings.LOG_FRC;
	
	public default void print(String s, int level) {
		if(level == LOG_FRC)
		if(level <= LOG_LVL) System.out.print(s);
	}
	
	public default void print(String s) {
		print(s, LOG_DEF);
	}
	
	public default void echo(String s, int level) {
		print(s + "\n", level);
	}
	
	public default void echo(String s) {
		echo(s, LOG_DEF);
	}
	
	public default void error(String s, int level) {
		if(level <= LOG_LVL) System.err.println(s);;
	}
	
	public default void error(String s) {
		error(s, LOG_DEF);
	}
}
