
public class Testing {
	
	public static void main(String[] args) {
		Animal a = new Animal(2);
		Dog d = new Dog("Bp", 2);
		
		System.out.println(d.getLegs() + d.getName());
		a = d;
		a.getLegs();
		a.getName();
	}
	
	public static class Animal {
		int legs = 0;
		
		Animal(int legs) {
			this.legs = legs;
		}
		
		public int getLegs() {
			return legs;
		}
	}
	
	public static class Dog extends Animal {
		String name = "";
		
		Dog(String name, int legs) {
			super(4);
		}
		
		String getName() {
			return name;
		}
	}
}
