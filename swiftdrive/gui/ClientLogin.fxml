<BorderPane depthTest="DISABLE" maxHeight="500.0" maxWidth="1000.0" minHeight="450.0" minWidth="600.0" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sd.swift">
   <center>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="300.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Login">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <TextField fx:id="user_fld" promptText="Username" />
            <PasswordField fx:id="pass_fld" promptText="Password" />
            <StackPane>
               <children>
                  <HBox fillHeight="false" spacing="25.0" visible="false">
                     <children>
                        <Button mnemonicParsing="false" text="Settings" />
                        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Submit" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="host_fld" prefWidth="172.0" promptText="Hostname" />
                        <TextField fx:id="port_fld" prefWidth="80.0" promptText="Port" />
                        <Button mnemonicParsing="false" onAction="#connect" prefWidth="80.0" text="Go!" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
            <Label fx:id="err_lbl" textFill="RED">
               <padding>
                  <Insets top="-15.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </center>
   <right>
      <ImageView fitHeight="400.0" fitWidth="500.0" opacity="0.5" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="BOTTOM_CENTER">
         <image>
            <Image url="@res/background_icon.png" />
         </image>
      </ImageView>
   </right>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets right="-1.0" />
   </padding>
</BorderPane>
